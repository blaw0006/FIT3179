{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 300, "height": 200,
  "data": {
    "url": "https://raw.githubusercontent.com/blaw0006/FIT3179/main/assignment2/data/vaccination_edited.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Percentage Vaccinated": "number",
        "Dose": "number",
        "vaccinated_pop": "number"
      }
    }
  },
  
  "params": [
    {
      "name": "state_selection",
      "bind": {
        "input": "select",
        "options": [
          "Perlis",
          "Kedah",
          "Penang",
          "Perak",
          "Selangor",
          "Kuala Lumpur",
          "Putrajaya",
          "Negeri Sembilan",
          "Melaka",
          "Kelantan",
          "Terengganu",
          "Pahang",
          "Johor",
          "Sabah",
          "Labuan",
          "Sarawak"
        ],

        "labels": [
          "Perlis",
          "Kedah",
          "Penang",
          "Perak",
          "Selangor",
          "Kuala Lumpur",
          "Putrajaya",
          "Negeri Sembilan",
          "Melaka",
          "Kelantan",
          "Terengganu",
          "Pahang",
          "Johor",
          "Sabah",
          "Labuan",
          "Sarawak"
        ],

        "name": "State Selection:"
      }
    }
  ],

  "mark": "area",
  "transform": [
    {"filter": "state_selection == null || datum.State == state_selection"}
  ],
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal"
    },
    "y": {
      "field": "Percentage Vaccinated",
      "type": "quantitative",
      "scale": {"domain": [0,20]}
    },
    "color": {
      "field": "Dose",
      "scale": {"scheme": "category20b"}
    }
  }
}