{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "First and Second dose vaccinations over the first month",
  "width": 300, "height": 200,
  "data": {
    "url": "https://raw.githubusercontent.com/blaw0006/FIT3179/main/assignment2/data/vaccination_edited.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Percentage Vaccinated": "number",
        "Dose": "number",
        "vaccinated_pop": "number"
      }
    }
  },
  
  "params": [
    {
      "name": "state_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Perlis",
          "Kedah",
          "Penang",
          "Perak",
          "Selangor",
          "Kuala Lumpur",
          "Putrajaya",
          "Negeri Sembilan",
          "Melaka",
          "Kelantan",
          "Terengganu",
          "Pahang",
          "Johor",
          "Sabah",
          "Labuan",
          "Sarawak"
        ],

        "labels": [
          "None",
          "Perlis",
          "Kedah",
          "Penang",
          "Perak",
          "Selangor",
          "Kuala Lumpur",
          "Putrajaya",
          "Negeri Sembilan",
          "Melaka",
          "Kelantan",
          "Terengganu",
          "Pahang",
          "Johor",
          "Sabah",
          "Labuan",
          "Sarawak"
        ],

        "name": "State Selection:"
      }
    }
  ],

  "layer": [
    {
      "mark": "area",
      "transform": [
        {"filter": "state_selection !== null && datum.State === state_selection"}
      ],
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal"
        },
        "y": {
          "field": "Percentage Vaccinated",
          "type": "quantitative",
          "scale": {"domain": [0,20]}
        },
        "color": {
          "field": "Dose",
          "scale": {"scheme": "tableau10"}
        },
        "tooltip": [
          {"field": "date", "type": "temporal", "title": "Date"},
          {"field": "Percentage Vaccinated", "type": "quantitative", "title": "Percentage Vaccinated", "format": ".2f"},
          {"field": "Dose", "type": "nominal", "title": "Dose"}
        ]
      }
    },
    {
      "mark": {
        "type": "text", 
        "align": "left", 
        "baseline": "top", 
        "dx": -80, "dy": 40,
        "fontWeight": 100,
        "font": "Libre Franklin"},
      "encoding": {
        "text": {"value": "2nd dose vaccinations start three weeks into programme"}
      }
    }
  ],
  "config": {
    "axis": {
      "labelFont": "Libre Franklin",
      "labelFontSize": 10, 
      "titleFontWeight": 600 
    },
    "title": {
      "font": "Libre Franklin"
    }
  }
}
